{
  "compilerOptions": {
    "typeRoots": ["src/@types/"],
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "interfaces", "utils"]
}